{
  "name": "@logux/redux",
  "version": "0.4.2",
  "description": "Redux compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "redux",
    "websocket"
  ],
  "scripts": {
    "api": "documentation build *.js -f md -o api.md",
    "spell": "yarn api && yaspeller *.md",
    "clean": "rimraf api.md coverage/",
    "lint": "eslint *.js test/{**/,}*.js",
    "test": "jest --coverage && eslint . && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/redux",
  "peerDependencies": {
    "react": ">=16.8.4",
    "react-redux": ">=6.0.0"
  },
  "dependencies": {
    "@logux/client": "^0.5.2",
    "@logux/core": "^0.3.4",
    "nanoevents": "^2.0.0",
    "redux": "^4.0.4"
  },
  "devDependencies": {
    "@logux/eslint-config": "^34.0.1",
    "@logux/sharec-config": "^0.5.6",
    "@size-limit/preset-small-lib": "^2.2.1",
    "clean-publish": "^1.1.2",
    "documentation": "^12.1.4",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^13.0.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "nanodelay": "^0.1.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "yaspeller": "^6.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "rules": {
      "es5/no-es6-static-methods": "off"
    }
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "12 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "changeListener",
      "createLoguxCreator",
      "createLoguxStore",
      "createStore",
      "CrossTabClient",
      "dispatchCrossTab",
      "dispatchLocal",
      "dispatchSync",
      "getState",
      "GraphQL",
      "Logux",
      "logux",
      "LoguxStore",
      "reconnection",
      "reconnections",
      "Redux",
      "replaceReducer",
      "SemVer",
      "storeCreator",
      "subprotocol",
      "unsubscribe",
      "Versioning",
      "ws",
      "useSubscription",
      "JSDoc",
      "SubscribeAction",
      "io"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.6"
  }
}
