{
  "name": "@logux/redux",
  "version": "0.4.2",
  "description": "Redux compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "redux",
    "websocket"
  ],
  "scripts": {
    "spell": "yaspeller *.md",
    "clean": "rimraf coverage/",
    "test": "jest --coverage && eslint . && check-dts && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/redux",
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.4",
    "react-redux": ">=6.0.0"
  },
  "dependencies": {
    "@logux/client": "logux/client",
    "@logux/core": "logux/core",
    "@size-limit/dual-publish": "^4.4.1",
    "@types/react": "^16.9.25",
    "dual-publish": "^0.8.5",
    "nanoevents": "^5.1.5",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@logux/eslint-config": "^36.1.1",
    "@logux/sharec-config": "^0.6.2",
    "@size-limit/preset-small-lib": "^4.4.1",
    "check-dts": "^0.1.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^17.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.9",
    "nanodelay": "^1.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "size-limit": "^4.4.1",
    "yaspeller": "^6.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "size-limit": [
    {
      "import": "{ createLoguxCreator, useSubscription }",
      "limit": "11 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "changeListener",
      "createLoguxCreator",
      "createLoguxStore",
      "createStore",
      "CrossTabClient",
      "dispatchCrossTab",
      "dispatchLocal",
      "dispatchSync",
      "getState",
      "GraphQL",
      "Logux",
      "logux",
      "LoguxStore",
      "reconnection",
      "reconnections",
      "Redux",
      "replaceReducer",
      "SemVer",
      "storeCreator",
      "subprotocol",
      "unsubscribe",
      "Versioning",
      "ws",
      "useSubscription",
      "JSDoc",
      "SubscribeAction",
      "io"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.6.2"
  }
}
