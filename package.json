{
  "name": "@logux/redux",
  "version": "0.7.1",
  "description": "Redux compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "redux",
    "websocket"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/",
    "test": "jest-ci --coverage && eslint-ci . && check-dts && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/redux",
  "sideEffects": false,
  "types": "./index.d.ts",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "peerDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "^0.6.2",
    "react": ">=16.8.4",
    "react-redux": ">=6.0.0",
    "redux": ">=4.0.0"
  },
  "dependencies": {
    "nanoevents": "^5.1.10"
  },
  "devDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "^0.6.2",
    "@logux/eslint-config": "^41.0.2",
    "@logux/sharec-config": "^0.7.9",
    "@size-limit/dual-publish": "^4.6.2",
    "@size-limit/preset-small-lib": "^4.6.2",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.53",
    "@types/react-redux": "^7.1.9",
    "@types/react-test-renderer": "^16.9.3",
    "@types/ws": "^7.2.7",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "check-dts": "^0.3.3",
    "dual-publish": "^0.11.0",
    "eslint": "^7.11.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.4.2",
    "nanodelay": "^1.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.1",
    "react-test-renderer": "^17.0.1",
    "redux": "^4.0.5",
    "rimraf": "^3.0.2",
    "size-limit": "^4.6.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "yaspeller": "^7.0.0",
    "yaspeller-ci": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix",
    "*.tsx": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "./index.js": "{ createStoreCreator, useSubscription, useDispatch }"
      },
      "limit": "10 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "logux",
      "Redux",
      "JSDoc",
      "io",
      "GraphQL",
      "ES",
      "TypeDoc",
      "WebSocket",
      "roadmap"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.9"
  }
}
