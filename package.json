{
  "name": "@logux/redux",
  "version": "0.7.1",
  "description": "Redux compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "redux",
    "websocket"
  ],
  "scripts": {
    "test": "jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/redux",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "peerDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "logux/core#next",
    "react": ">=16.8.4",
    "react-redux": ">=6.0.0",
    "redux": ">=4.0.0"
  },
  "dependencies": {
    "nanoevents": "^5.1.10"
  },
  "devDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "logux/core#next",
    "@logux/eslint-config": "^44.1.0",
    "@logux/sharec-config": "^0.8.5",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-redux": "^7.1.16",
    "@types/react-test-renderer": "^17.0.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "check-dts": "^0.4.1",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^27.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-esm-transformer": "^1.0.0",
    "lint-staged": "^10.5.3",
    "nanodelay": "^1.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-test-renderer": "^17.0.1",
    "redux": "^4.0.5",
    "size-limit": "^4.9.2",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix",
    "*.tsx": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      ".js": "jest-esm-transformer"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@logux)"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/use-dispatch/index.js",
      "<rootDir>/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "./index.js": "{ createStoreCreator, useSubscription, useDispatch }"
      },
      "limit": "5 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "logux",
      "Redux",
      "JSDoc",
      "io",
      "GraphQL",
      "ES",
      "TypeDoc",
      "WebSocket",
      "roadmap"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.5"
  }
}
